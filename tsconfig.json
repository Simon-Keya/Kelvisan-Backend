{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false, // Enable if you want type-checking for .js files
    "lib": ["es2016", "dom"], // Add if DOM APIs are needed
    "sourceMap": true, // For debugging
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/database/migrations/**/*.js"],
  "exclude": ["node_modules"]
}